<%- include('../partials/header') %>

<div class="container mt-4">
  <h2>Welcome, <%= user.name %></h2>
  
  <div class="row mt-4">
    <!-- Attendance Card -->
    <div class="col-md-4 mb-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Attendance</h5>
          <p class="card-text">Mark attendance for students in your batches.</p>
          <a href="/teacher/attendance" class="btn btn-primary">Manage Attendance</a>
        </div>
      </div>
    </div>
    
    <!-- Test Scores Card -->
    <div class="col-md-4 mb-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Test Scores</h5>
          <p class="card-text">Add and manage test scores for your students.</p>
          <a href="/teacher/test-scores" class="btn btn-primary">Manage Scores</a>
        </div>
      </div>
    </div>
    
    <!-- Notes Card -->
    <div class="col-md-4 mb-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Notes & Tests</h5>
          <p class="card-text">Upload study materials and test papers for your students.</p>
          <a href="/teacher/notes" class="btn btn-primary">Manage Materials</a>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %> 