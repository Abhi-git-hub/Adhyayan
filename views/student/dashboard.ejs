<%- include('../partials/header') %>

<div class="container mt-4">
  <h2>Welcome, <%= user.name %></h2>
  
  <div class="row mt-4">
    <!-- Attendance Card -->
    <div class="col-md-4 mb-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Attendance</h5>
          <p class="card-text">View your attendance records and track your presence in class.</p>
          <a href="/student/attendance" class="btn btn-primary">View Attendance</a>
        </div>
      </div>
    </div>
    
    <!-- Test Scores Card -->
    <div class="col-md-4 mb-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Test Scores</h5>
          <p class="card-text">Check your test scores and performance across subjects.</p>
          <a href="/student/test-scores" class="btn btn-primary">View Scores</a>
        </div>
      </div>
    </div>
    
    <!-- Notes Card -->
    <div class="col-md-4 mb-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Notes & Tests</h5>
          <p class="card-text">Access study materials and previous test papers.</p>
          <a href="/student/notes" class="btn btn-primary">View Materials</a>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Recent Activity -->
  <div class="card mt-4">
    <div class="card-body">
      <h5 class="card-title">Recent Activity</h5>
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>Date</th>
              <th>Type</th>
              <th>Details</th>
            </tr>
          </thead>
          <tbody>
            <% if (recentActivity && recentActivity.length > 0) { %>
              <% recentActivity.forEach(activity => { %>
                <tr>
                  <td><%= activity.date.toLocaleDateString() %></td>
                  <td><%= activity.type %></td>
                  <td><%= activity.details %></td>
                </tr>
              <% }); %>
            <% } else { %>
              <tr>
                <td colspan="3" class="text-center">No recent activity</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %> 